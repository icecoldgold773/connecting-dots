{
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", { "code": 120, "ignoreComments": true }],
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "new-cap": "off",
        "consistent-return": "error",
        "quotes": ["error", "single"],
        "camelcase": ["error", { "properties": "always" }],
        "brace-style": ["error", "stroustrup"]
    },
    "overrides": [
        {
            "files": ["node/src/trainer/setup_model.js"],
            "rules": {
                "camelcase": "off"
            }
        }
    ]
}
